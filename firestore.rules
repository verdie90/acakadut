rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function hasRole(role) {
      return isAuthenticated() && getUserData().role == role;
    }
    
    function isAdmin() {
      return hasRole('admin');
    }
    
    function isManager() {
      return hasRole('manager');
    }
    
    function isManagerOrAbove() {
      return isAdmin() || isManager();
    }
    
    function getRolePermissions(role) {
      return get(/databases/$(database)/documents/roles/$(role)).data.permissions;
    }
    
    function hasPermission(permission) {
      return isAuthenticated() && 
             permission in getRolePermissions(getUserData().role);
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data
      // Managers can read all users
      // Admins can read all users
      allow read: if isAuthenticated() && 
                    (isOwner(userId) || isManagerOrAbove());
      
      // Users can update their own profile (except role)
      allow update: if isAuthenticated() && 
                     isOwner(userId) && 
                     !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']);
      
      // Only admins can create new users or change roles
      allow create: if isAdmin() || 
                     (isAuthenticated() && isOwner(userId));
      
      // Only admins can update roles
      allow update: if isAdmin();
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Roles collection - dynamic role management
    match /roles/{roleId} {
      // All authenticated users can read roles
      allow read: if isAuthenticated();
      
      // Only admins can modify roles
      allow write: if isAdmin();
    }
    
    // Menus collection - dynamic menu management
    match /menus/{menuId} {
      // All authenticated users can read menus
      allow read: if isAuthenticated();
      
      // Only admins can modify menus
      allow write: if isAdmin() || hasPermission('manage_menus');
    }
    
    // Reports collection
    match /reports/{reportId} {
      // Users with VIEW_REPORTS permission can read
      allow read: if isAuthenticated() && 
                   (hasPermission('view_reports') || 
                    resource.data.createdBy == request.auth.uid);
      
      // Users with CREATE_REPORTS permission can create
      allow create: if isAuthenticated() && 
                     hasPermission('create_reports');
      
      // Report owner or managers can update
      allow update: if isAuthenticated() && 
                     (resource.data.createdBy == request.auth.uid || 
                      isManagerOrAbove());
      
      // Only admins can delete reports
      allow delete: if isAdmin();
    }
    
    // Activities collection - audit log
    match /activities/{activityId} {
      // Admins and managers can read all activities
      // Users can only read their own activities
      allow read: if isAuthenticated() && 
                   (isManagerOrAbove() || 
                    resource.data.userId == request.auth.uid);
      
      // Any authenticated user can create activities (logging)
      allow create: if isAuthenticated();
      
      // Activities cannot be updated or deleted (immutable audit log)
      allow update, delete: if false;
    }
    
    // Settings collection
    match /settings/{settingId} {
      // Users with VIEW_SETTINGS permission can read
      allow read: if isAuthenticated() && hasPermission('view_settings');
      
      // Users with EDIT_SETTINGS permission can write
      allow write: if isAuthenticated() && hasPermission('edit_settings');
    }
    
    // User data collection - personal data for each user
    match /userData/{userId}/{document=**} {
      // Users can only access their own data
      allow read: if isAuthenticated() && 
                   (isOwner(userId) || hasPermission('view_all_data'));
      
      // Users can only modify their own data
      allow write: if isAuthenticated() && 
                    (isOwner(userId) || isAdmin());
    }
    
    // Analytics collection
    match /analytics/{docId} {
      // Users with VIEW_ANALYTICS permission can read
      allow read: if isAuthenticated() && hasPermission('view_analytics');
      
      // Only admins can write analytics data
      allow write: if isAdmin();
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
